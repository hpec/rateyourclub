-load static
-load review_form_handler
!!! 5
%head
    %link{ 'href' : "{% static 'css/bootstrap.min.css' %}", 'rel' : 'stylesheet', 'type' : 'text/css' }
    %title
        {{club}}
%div{ 'class': 'container-fluid'}
    %div{ 'class' : 'row'}
        %div{ 'class' : 'offset2'}
            %h1 {{ club }}
        %div{'class':'span8 offset2'}
            %p
              %h5 Introduction:
              {{ club.introduction }}
              %h5 Website
              {{club.website}}
            %a{ 'class':'btn btn-primary','href':"{% url 'clubreview.views.add_review' %}"}
                Review

            %p 
              %h5 Reviews:

            - for review in reviews
                    %p {{ review }}
                - empty
                    %p No reviews yet!
        %div{'class':'span4'}
            %h4 Events
            %span
                - firstof events "No events listed!"

    %div{ 'class' : 'row'}
        %div{'class': 'offset2'}
            %p
              %a{ 'href': "{% url 'club_list_view' %}"}
                    Back to list
    %div{ 'class' : 'row'}
        %div{ 'class' : 'offset2'}
          -review_form_handler
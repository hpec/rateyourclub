- include_jquery_libs
{{ form.media.css }}
{{ form.media.js }} 
:css
    .form-horizontal { text-align:left; }
    .form-horizontal .control-group { margin-bottom: 0px; }
    .form-horizontal .control-label { margin-left:0px; width:20px }
    .form-horizontal .controls { margin-left:80px; }

%form.form-horizontal{ 'method':"post", 'action':""}
    - csrf_token
    - for field in form
        .row-fluid
            .span6
                .control-group
                    %label.control-label
                        {{ field.label_tag }} 
                    .controls
                        {{ field }}
    %button.btn-primary{'type':"submit"}

- load tz
- for event in events
  %div
      %a{ 'href' : "{{ event.facebook_url }}" }
            {{ event.name }}
    %div{'style':'font-size:12px; color:#aaa;'}
        {{ event.location }}
    %div{'style':'font-size:12px; color:#aaa;'}
        {% localtime off %}
            {{ event.display_start_time }}
            to
            {{ event.display_end_time }}
        {% endlocaltime %}
    %hr


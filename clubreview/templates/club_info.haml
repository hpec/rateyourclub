- extends "base.html"

- load review_form_handler
- load static

- block content
    #main-wrapper.row
        #main-content.span8
            #club-name
                %h3 {{ club }}
            .card
                %h5 Introduction:
                {{ club.introduction }}
            .card
                %h5 Website
                {{club.website}}
            .card
                %h5 Reviews:
                - for review in reviews
                    .review
                        {{ review.date_posted }}
                        {{ review.ratings }}
                        {{ review.content }}


                - empty
                    %p No reviews yet!
            .backtolist
                %a{ 'href': "{% url 'club_list_view' %}"} Back to list


            -review_form_handler

        .span4
            #event-panel
                %h4 Events
                %span
                    - firstof events "No events listed!"



- load static
- load selectable_tags

{{ form.media.css }}
{{ form.media.js }}
- include_ui_theme

.review-form-wrapper
    %form#review_form.form-horizontal{'method':"post", 'action':""}
        - if form.errors
            .form-fieldset
                .alert.alert-error
                    = form.errors
        - if form.success
            .form-fieldset
                .alert.alert-success
                    = form.success

        - csrf_token
        - for field in form
            .control-group
                .control-label {{ field.label_tag }}
                .controls {{ field }}
        %input{'type':"hidden", 'id':"rating-val", 'name':"rating-val", 'value':"3"}

        .control-group
            .control-label Ratings
            .controls
                .input.select.rating-star-wrapper
                    %select#rating
                        %option{'value':"1"} 1
                        %option{'value':"2"} 2
                        %option{'value':"3", 'selected':'true'} 3
                        %option{'value':"4"} 4
                        %option{'value':"5"} 5

        %button.btn-primary.btn{'type':"submit"} Submit

- extends "base.html"
- block content
    %div{'style':'margin-right:auto; margin-left:auto; width:500px; margin-top:100px; margin-bottom:100px'}
        %form.form-horizontal{'method':"post", 'action':""}
            - csrf_token
            - for field in form
                - if field.label_tag
                    .control-group
                        .control-label {{ field.label_tag }}
                        .controls {{ field }}
                - else
                    {{ field }}

            %div{'style':'margin-right:auto; margin-left:auto; width:100px'}
                %button.btn-primary.btn{'type':"submit"} Register
